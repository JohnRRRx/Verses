<div class="flex-grow container mx-auto px-4 pt-28 pb-24 flex items-center justify-center min-h-screen">
  <div class="w-[450px] border-2 border-white rounded-2xl p-8 shadow-xl">
    <h1 class="text-2xl font-semibold mb-6 text-center"><%= t('user_sessions.new.login') %></h1>
    
    <%= form_with url: login_path do |f| %>
      <div class="space-y-5">
        <div>
          <%= f.label :email, class: "block mb-2 text-sm font-semibold text-gray-900" %>
          <%= f.email_field :email, class: "bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5" %>
        </div>
        
        <div>
          <%= f.label :password, class: "block mb-2 text-sm font-semibold text-gray-900" %>
          <%= f.password_field :password, class: "bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5" %>
        </div>

        <div class="pt-2">
          <%= f.submit t('user_sessions.new.login'), class: "w-full text-white bg-slate-500 hover:bg-slate-700 focus:ring-4 focus:ring-blue-300 font-semibold rounded-lg text-sm px-5 py-2.5" %>
        </div>
      </div>
    <% end %>
    <div class='text-center mt-6 space-y-2 hover:bg-gray-500'>
<%= link_to auth_at_provider_path(provider: :google) , style: 'display: inline-block;' do %>
  <%= image_tag 'google.png', width: 40, height: 40 %>
<% end %>
</div>
    <div class='text-center mt-6 space-y-2'>
      <%= link_to t('user_sessions.new.sign_up'), new_user_path, class: "w-full text-white bg-slate-500 hover:bg-slate-700 focus:ring-4 focus:ring-blue-300 font-semibold rounded-lg text-sm px-5 py-2.5" %>
      <%= link_to t('user_sessions.new.password_forget'), new_password_reset_path, class: "block text-white hover:underline" %>
    </div>
  </div>
</div>
</body>